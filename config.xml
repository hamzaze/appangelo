<widget xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0" xmlns:cdv="http://cordova.apache.org/ns/1.0" id="com.ihumoruangelotsarouchas.app" version="1.0.0">
  <name>IHU - ANGELO TSAROUCHAS</name>
  <description>Angelo Tsarouchas - App</description>
  <author href="http://www.intellicomstudios.net" email="info@intellicomstudios.net">Robin Ozolins</author>
  <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
  <platform name="android">
       
    </platform>
    <platform name="ios">
        
    </platform> 
    
    <preference name="orienation" value="portrait" />
    <preference name="permissions" value="none" />
    <preference name="target-device" value="handset" />
    <preference name="deployment-target" value="8.0" />
    <preference name="DisallowOverscroll" value="true"/>
    
    <plugin name="cordova-plugin-dialogs" />
    <plugin name="cordova-plugin-whitelist" spec="~1.2.0" />
    <!-- White list https access to Youtube -->
    <allow-navigation href="*://*youtube.com/*"/>
    <plugin name="cordova-plugin-calendar" source="npm">
        <variable name="CALENDAR_USAGE_DESCRIPTION" value="This app uses your calendar" />
    </plugin>
    <preference name="android-build-tool" value="gradle" />
    <preference name="phonegap-version" value="cli-7.0.1" />
</widget>